<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.text.Text?>

<HBox xmlns:fx="http://javafx.com/fxml/1" fx:id="container" alignment="TOP_RIGHT" minWidth="-Infinity"
      prefWidth="400.0" xmlns="http://javafx.com/javafx/11.0.1">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
    <Circle fx:id="avatar" fill="WHITE" radius="22.0" stroke="BLACK" strokeType="INSIDE">
        <HBox.margin>
            <Insets/>
        </HBox.margin>
    </Circle>
    <VBox fx:id="messageHolder" prefWidth="310.0">
        <HBox.margin>
            <Insets left="10.0" right="10.0" top="3.0"/>
        </HBox.margin>
        <Text fx:id="message" text="Hello World!"/>
    </VBox>
</HBox>
